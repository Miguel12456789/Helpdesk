document.addEventListener("DOMContentLoaded", () => {
  // Assuming you have a search form with id "search-form"
  const searchForm = document.getElementById("search-form")

  if (searchForm) {
    // Load the contract details component after the search form
    fetch("/path-to-your-ejs-template/contract-details.ejs")
      .then((response) => response.text())
      .then((html) => {
        // Create a container for the contract details
        const contractContainer = document.createElement("div")
        contractContainer.innerHTML = html

        // Insert the contract details after the search form
        searchForm.parentNode.insertBefore(contractContainer, searchForm.nextSibling)

        // Load and apply the CSS
        const contractStyles = document.createElement("link")
        contractStyles.rel = "stylesheet"
        contractStyles.href = "/path-to-your-css/contract-details.css"
        document.head.appendChild(contractStyles)

        // Load and apply the JavaScript
        const contractScript = document.createElement("script")
        contractScript.src = "/path-to-your-js/contract-details.js"
        document.body.appendChild(contractScript)
      })
      .catch((error) => {
        console.error("Error loading contract details component:", error)
      })
  }
})



