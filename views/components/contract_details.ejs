        <div class="table-cell value-cell">-</div>
      </div>
    </div>
  </div>
</div>
  
<script>
document.addEventListener("DOMContentLoaded", () => {
  // Dropdown functionality
  const dropdownButton = document.querySelector(".dropdown-button")
  const dropdownContent = document.querySelector(".dropdown-content")

  if (dropdownButton && dropdownContent) {
    // Toggle dropdown on click (for mobile)
    dropdownButton.addEventListener("click", (e) => {
      e.stopPropagation()
      dropdownContent.style.display = dropdownContent.style.display === "block" ? "none" : "block"
    })

    // Close dropdown when clicking outside
    document.addEventListener("click", () => {
      dropdownContent.style.display = "none"
    })

    // Handle dropdown item selection
    const dropdownItems = dropdownContent.querySelectorAll("a")
    dropdownItems.forEach((item) => {
      item.addEventListener("click", function (e) {
        e.preventDefault()
        dropdownButton.textContent = this.textContent
        dropdownButton.appendChild(document.createElement("span")).className = "dropdown-icon"
        dropdownButton.querySelector(".dropdown-icon").textContent = "▼"
        dropdownContent.style.display = "none"
      })
    })
  }

  // Search functionality
  const searchForm = document.querySelector(".search-form")
  const searchInput = document.querySelector(".search-input")
  const searchButton = document.querySelector(".search-button")

  if (searchForm && searchInput && searchButton) {
    searchButton.addEventListener("click", () => {
      performSearch()
    })

    searchInput.addEventListener("keypress", (e) => {
      if (e.key === "Enter") {
        e.preventDefault()
        performSearch()
      }
    })

    function performSearch() {
      const searchTerm = searchInput.value.trim()
      if (searchTerm) {
        // In a real application, you would send this to your server
        console.log("Searching for:", searchTerm)
        alert(`Pesquisando por: ${searchTerm}`)

        // Simulate loading contract details
        // In a real app, this would be replaced with an AJAX call
        setTimeout(() => {
          document.querySelector(".details-section").style.display = "block"
        }, 500)
      } else {
        alert("Por favor, insira um termo de pesquisa.")
      }
    }
  }

  // Advanced search button
  const advancedSearchButton = document.querySelector(".advanced-search-button")
  if (advancedSearchButton) {
    advancedSearchButton.addEventListener("click", () => {
      alert("Abrindo pesquisa avançada...")
      // In a real app, this would open an advanced search form or modal
    })
  }

  // Action buttons functionality
  const exportButton = document.querySelector(".export-button")
  const emailButton = document.querySelector(".email-button")
  const printButton = document.querySelector(".print-button")

  if (exportButton) {
    exportButton.addEventListener("click", () => {
      alert("Exportando resultados...")
      // In a real app, this would trigger a download
    })
  }

  if (emailButton) {
    emailButton.addEventListener("click", () => {
      alert("Preparando envio por e-mail...")
      // In a real app, this would open an email form
    })
  }

  if (printButton) {
    printButton.addEventListener("click", () => {
      window.print()
    })
  }

  // Form validation
  function validateForm() {
    const searchTerm = searchInput.value.trim()
    if (!searchTerm) {
      return false
    }
    return true
  }

  // Initialize the page - hide details section until search is performed
  // Uncomment this line if you want to hide the details initially
  // document.querySelector('.details-section').style.display = 'none';
})

