<!-- Contract Details Form -->
  <!-- Contract Details Section -->
  <div class="details-section">
    <div class="details-header">
      <h2 class="details-title">DETALHE CONTRATO</h2>
      
      <div class="details-actions">
        <div class="action-buttons">
          <button class="action-button export-button">EXPORTAR RESULTADOS</button>
          <button class="action-button email-button">ENVIAR POR E-MAIL</button>
          <button class="action-button print-button">IMPRIMIR</button>
        </div>
        <div class="last-update">Última Atualização: <span id="update-date">14 fev. 2025</span></div>
      </div>
    </div>
    
    <div class="details-table">
      <div class="table-row light-row">
        <div class="table-cell label-cell">Data de Publicação:</div>
        <div class="table-cell value-cell">26-09-1756</div>
      </div>
      
      <div class="table-row">
        <div class="table-cell label-cell">Tipo de Contrato</div>
        <div class="table-cell value-cell">Aquisição de Serviços</div>
      </div>
      
      <div class="table-row light-row">
        <div class="table-cell label-cell">N° de acordo quadro</div>
        <div class="table-cell value-cell">Não Aplicável</div>
      </div>
      
      <div class="table-row">
        <div class="table-cell label-cell">Descrição de acordo quadro</div>
        <div class="table-cell value-cell">Não Aplicável</div>
      </div>
      
      <div class="table-row light-row">
